<Window x:Class="GospelSub.WPF.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GospelSub.WPF"
        mc:Ignorable="d"
        Title="GospelSub: Progress" SizeToContent="WidthAndHeight" WindowStyle="None" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closing="Window_Closing">
    <StackPanel>
        <TextBlock x:Name="textTitle" HorizontalAlignment="Center" TextWrapping="Wrap" Text="GospelSub: Loading" VerticalAlignment="Top" Height="54" Width="336" FontSize="36"/>
        <TextBlock x:Name="textProgress" HorizontalAlignment="Left" Text="Loading..." FontSize="24" Margin="10,0"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="36" VerticalAlignment="Bottom" Width="772" Margin="10,0" Maximum="1" Minimum="0"/>
    </StackPanel>
</Window>
