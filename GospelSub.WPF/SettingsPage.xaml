<Page x:Class="GospelSub.WPF.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" Width="200">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <CheckBox x:Name="checkBox" Content="Black Theme" Margin="10" Padding="10,0,10,0" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        <Button x:Name="Fontbutton" Content="Font..." Click="Fontbutton_Click" HorizontalAlignment="Center" Padding="10" Margin="10" VerticalAlignment="Center"/>
        <Button x:Name="Colorbutton" Content="Color..." Click="Colorbutton_Click" HorizontalAlignment="Center" Padding="10" Margin="10" VerticalAlignment="Center"/>
        <Button x:Name="BackFilebutton" Content="Find Background File..." IsEnabled="{Binding Setting.Current.White, Mode=OneWay}" Click="BackFilebutton_Click" HorizontalAlignment="Center" Padding="10" Margin="10" VerticalAlignment="Center"/>
        <Button x:Name="Gobutton" Content="Go" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="10" Click="Gobutton_Click"/>
    </StackPanel>
</Page>
